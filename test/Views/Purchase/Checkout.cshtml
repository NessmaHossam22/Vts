@model CartItem
@{
   
    double sum=0;
}
<h2>CheckOut</h2>
@if (Model.carts.Any())
{
    <div class="continer">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Item Name</th>
                    <th>Prise</th>
                    <th>Quantity</th>
                    <th>Total</th>


                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.carts)
                {
                  
                               double x= (item.Quantity * item.Price);
                            sum +=sum;

                    <tr>
                        <td> @item.ItemName</td>
                        <td>@item.Price</td>
                        <td>@item.Quantity</td>
                        <td>@x</td>

                    </tr>
                   
                }
             
            </tbody>
        </table>
        <div class="form-control">
            <form asp-action="CompleteCheckout" method="post">
                <div class="form-group">
                    <label class="control-label col-sm-2" asp-for="DicCount">DicCount @Model.DicCount %</label>
                   
                    <div class="col-sm-10">
                        <input   asp-for=DicCount class="form-control" value="@Model.TotalPay" readonly>
                    </div>
                </div>
                <button type="submit">Proceed to Checkout</button>
            </form>
            
           
        </div>
    </div>
   
    
}
else
{
    <p>Your cart is empty.</p>
}

