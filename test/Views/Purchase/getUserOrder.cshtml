@model IEnumerable<test.Models.invoice>
<h2>Invoice List</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Invoice ID</th>
            <th>User Name</th>
            <th>Invoice Prise</th>
            <th>Didcount</th>
            <th>totalpay</th>
            <th>Details</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var invoice in Model)
        {
            <tr>
                <td>@invoice.Id</td>
                <td>@invoice.User.Name</td>
                <td>@invoice.total</td>
                <td>@invoice.diCount %</td>
                <td>@invoice.totalpay</td>

                <td>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Product ID</th>
                                <th>Product Name</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var detail in invoice.InvoiceDetlies)
                            {
                                <tr>
                                    <td>@detail.Id</td>
                                    <td>@detail.itemname</td>
                                    <td>@detail.price</td>
                                    <td>@detail.quantity</td>
                                    <td>@detail.total</td>
                                   


                                </tr>
                            }
                        </tbody>
                    </table>
                </td>
            </tr>
        }
    </tbody>
</table>
